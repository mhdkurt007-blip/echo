{
  "expo": {
    "name": "Echo",
    "slug": "echo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "echo",
    "userInterfaceStyle": "automatic",
    "splash": { 
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.muhammed.echo",  
      "infoPlist": {  
        "NSLocationWhenInUseUsageDescription": "Eko'ları haritada göstermek ve yakındaki Eko'ları bulmak için konumunuza ihtiyaç var.",
        "NSMicrophoneUsageDescription": "Uygulama, Eko bırakabilmeniz için mikrofonunuza erişim izni istiyor."
      }
    },
    "android": {
      "adaptiveIcon": {
         
        "foregroundImage": "./assets/images/adaptive-icon.png", 
        "backgroundColor": "#ffffff"
      },
      "package": "com.muhammed.echo",
      "versionCode": 1,
      "googleServicesFile": "./google-services.json",
      "permissions": [  
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyCd8QwGZCTPcvZhh2YcxPrPtNBDNEb_1h8"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",  
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "b0df4857-9969-4eff-9737-3e31e786d11c"
      }
    }
  }
}